<ul>
	<% if @order != nil %>

		<% @order.order_ingredients.each do |order_ingredient| %>
			<li>
				<span>Ingredient: <%= order_ingredient.ingredient.name %></span>
				<span>Price: <%= order_ingredient.ingredient.price %></span>
				<span>Quantity: <%= order_ingredient.quantity %></span>
				<%= link_to "Remove", order_ingredient_path(id: order_ingredient.id), method: :delete, remote: true %>
			</li>

		<% end %>

		<%= form_tag order_path(@order.id), method: :put do %>
			<%= hidden_field_tag :available, value: true %>	
			<%= submit_tag "Place Order" %>
		<% end %>	
	<% else %>
		<h3>Nothing is in your cart right now</h3>

	<% end %>
</ul>