<h1>Recipes#index</h1>
<p>Find me in app/views/recipes/index.html.erb</p>

<div class="search_form">
	<%= form_tag(ingredients_path, remote: true) do %>
		<%= label_tag "Search Ingredients" %>
		<%= text_field_tag :query %>
		<%= submit_tag "submit" %>
	<% end %>	
</div>

<div class="search_form">
	<%= form_tag(recipes_path, remote: true, method: :get) do %>
		<%= label_tag "Search Recipes" %>
		<%= text_field_tag :title, params[:search] %>
		<%= submit_tag "submit" %>
	<% end %>	
</div>

<div id="searchResults">
</div>